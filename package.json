{
  "name": "surface-expert",
  "version": "2.9.1",
  "description": "SurfaceExpert - Optical Surface Analysis Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false&& electron-builder",
    "build:portable": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable"
  },
  "keywords": [
    "optical",
    "surface",
    "analyzer",
    "surfaceexpert",
    "zemax"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "decimal.js": "^10.6.0",
    "electron": "^39.2.3",
    "electron-builder": "^24.9.1",
    "rcedit": "^5.0.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.surfaceexpert.app",
    "productName": "SurfaceExpert",
    "asar": true,
    "asarUnpack": "**/*.ico",
    "forceCodeSigning": false,
    "afterPack": "build/afterPack.js",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "icons/**/*",
      "LICENSE"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/IconInvertedNoBGGlow.ico",
      "requestedExecutionLevel": "asInvoker",
      "sign": null,
      "signingHashAlgorithms": [],
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "extraResources": [
      {
        "from": "icons/IconInvertedNoBGGlow.ico",
        "to": "IconInvertedNoBGGlow.ico"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/IconInvertedNoBGGlow.ico",
      "uninstallerIcon": "icons/IconInvertedNoBGGlow.ico",
      "installerHeaderIcon": "icons/IconInvertedNoBGGlow.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SurfaceExpert",
      "differentialPackage": false,
      "unicode": true,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  }
}
